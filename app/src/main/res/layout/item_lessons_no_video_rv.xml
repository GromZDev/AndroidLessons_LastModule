<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_film_container_rv_vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/timeline_line"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        app:srcCompat="@color/timeline_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/inner_view"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/timeline_circle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/ic_circle"
        android:layout_marginTop="-1dp"
        app:layout_constraintStart_toStartOf="@+id/timeline_line"
        app:layout_constraintEnd_toEndOf="@+id/timeline_line"
        app:layout_constraintTop_toTopOf="@+id/timeline_line"/>

    <ImageView
        android:id="@+id/expand_timeline_circle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_expand_circle"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="@+id/timeline_line"
        app:layout_constraintEnd_toEndOf="@+id/timeline_line"
        app:layout_constraintTop_toTopOf="@+id/timeline_line"
        android:visibility="visible"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/timeline_tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="@+id/inner_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Математика" />

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/inner_view"
    style="@style/LessonsRecyclerItem"
    android:layout_height="110dp"
    android:layout_width="0dp"
    android:gravity="center"
    app:layout_constraintWidth_percent="0.85"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:shapeAppearanceOverlay="@style/ItemRounded"
        android:contentDescription="@string/foto"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/item_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Математика" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:textColor="@color/time_text_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_image"
        app:layout_constraintTop_toBottomOf="@+id/item_name"
        tools:text="8.30 - 9.15" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>